-- CLICK ON 'C' TOOL - Press 'C' to click at current mouse position!
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

local UserInputService = game:GetService("UserInputService")
local VirtualInputManager = game:GetService("VirtualInputManager")

local function clickAt(x, y)
	VirtualInputManager:SendMouseButtonEvent(x, y, 0, true, game, 1)
	task.wait(0.01)
	VirtualInputManager:SendMouseButtonEvent(x, y, 0, false, game, 1)
end

-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ClickOnCTool"
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

if game:GetService("CoreGui"):FindFirstChild("ClickOnCTool") then
	game:GetService("CoreGui"):FindFirstChild("ClickOnCTool"):Destroy()
end

ScreenGui.Parent = game:GetService("CoreGui")

-- Create display label
local StatusLabel = Instance.new("TextLabel")
StatusLabel.Name = "StatusLabel"
StatusLabel.Size = UDim2.new(0, 350, 0, 80)
StatusLabel.Position = UDim2.new(0.5, -175, 0.05, 0)
StatusLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
StatusLabel.BackgroundTransparency = 0.3
StatusLabel.BorderSizePixel = 0
StatusLabel.Text = "Press 'C' to click at mouse position"
StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
StatusLabel.TextSize = 18
StatusLabel.Font = Enum.Font.GothamBold
StatusLabel.TextWrapped = true
StatusLabel.Parent = ScreenGui

local Corner = Instance.new("UICorner")
Corner.CornerRadius = UDim.new(0, 10)
Corner.Parent = StatusLabel

-- Create coordinate display
local CoordLabel = Instance.new("TextLabel")
CoordLabel.Name = "CoordLabel"
CoordLabel.Size = UDim2.new(0, 350, 0, 40)
CoordLabel.Position = UDim2.new(0.5, -175, 0.13, 0)
CoordLabel.BackgroundColor3 = Color3.fromRGB(255, 140, 0)
CoordLabel.BorderSizePixel = 0
CoordLabel.Text = "X: 0, Y: 0"
CoordLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
CoordLabel.TextSize = 16
CoordLabel.Font = Enum.Font.GothamBold
CoordLabel.Parent = ScreenGui

local Corner2 = Instance.new("UICorner")
Corner2.CornerRadius = UDim.new(0, 10)
Corner2.Parent = CoordLabel

-- Update coordinates in real-time
UserInputService.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		local mousePos = input.Position
		CoordLabel.Text = string.format("X: %d, Y: %d", mousePos.X, mousePos.Y)
	end
end)

-- Click when 'C' is pressed
UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if not gameProcessed and input.KeyCode == Enum.KeyCode.C then
		local mousePos = UserInputService:GetMouseLocation()
		local x = math.floor(mousePos.X)
		local y = math.floor(mousePos.Y)
		
		-- Perform click
		clickAt(x, y)
		
		-- Visual feedback
		StatusLabel.Text = string.format("âœ… CLICKED at X: %d, Y: %d", x, y)
		StatusLabel.BackgroundColor3 = Color3.fromRGB(70, 255, 70)
		
		-- Print to console
		print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
		print("ğŸ–±ï¸ CLICKED AT:")
		print(string.format("X: %d, Y: %d", x, y))
		print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
		
		-- Reset after 1 second
		task.wait(1)
		StatusLabel.Text = "Press 'C' to click at mouse position"
		StatusLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
	end
end)

print("\n" .. string.rep("â•", 60))
print("ğŸ–±ï¸ CLICK ON 'C' TOOL LOADED")
print(string.rep("â•", 60))
print("âœ… Move your mouse anywhere")
print("âœ… Press 'C' to click at that position")
print("âœ… Perfect for testing GUI clicks!")
print(string.rep("â•", 60) .. "\n")
